					img(src='/static/img/exit.png')
				h3.brand-name Nutrishop
				p.campaign-name Brand recognition
				p.influencers Influencers
				.seperator-div
				.influencers-container
					.influencers-wrapper
						.influencers-image-container
							img(src='/static/img/connor.jpg')
						.influencers-info-container
							p.influencers-name Connor Myers
							p.influencers-instagram-tag connormyers21
				.influencers-container
