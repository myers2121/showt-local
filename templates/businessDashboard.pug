extends ./layouts/_businessDashboardLayout.pug

block content
	section#edit-business-info-section(data-bind="click: hideEditBusinessInformationSection")
		.business-sign-up-form-container
			.business-login-form-wrapper
				.influencer-account-form-wrapper
					.influencer-account-form-wrapper.business-edit-account-info
						h3 Edit information
						p.account-text Create a Shout Local acccount to start growing your business today!
						.influencer-information-form-container
							.influencer-input-container
								.influencer-input
									.influencer-input-icon
										img(src='/static/img/email.png')
									input(type='email',placeholder='Email address', value="connormyers21@gmail.com")
								p.error-message Please enter a valid email
								.influencer-input
									.influencer-input-icon
										img(src='/static/img/user.png')
									input(type='text',placeholder='First name', value="Connor")
								p.error-message Please enter a first name
								.influencer-input
									.influencer-input-icon
										img(src='/static/img/user.png')
									input(type='text',placeholder='Last name', value="Myers")
								p.error-message Please enter a last name
								.influencer-input
									.influencer-input-icon
										img(src='/static/img/lock-grey.png')
									input(type='password',placeholder='Password', value="baller21")
								p.error-message Please enter a password with at least 6 characters
								.influencer-input
									.influencer-input-icon
										img(src='/static/img/business-contact.png')
									input(type='text',placeholder='Business name', value="Showt App")
								p.error-message Please enter your business' name
								.influencer-input
									.influencer-input-icon
										img(src='/static/img/phone.png')
									input(type='text',placeholder='Phone number', value="(559) 940-9699")
								p.error-message Please enter a phone number using spaces, hyphens, and parentheses
							p.error-message Make sure to fill out all of the fields on this page.
							.sign-up-button-container-influencer
								.sign-up-button-influencer(data-bind="click: showBusinessFurtherInfoContainer") Continue
					.influencer-information-sign-up-form-container.business-edit-business-information
						.influencer-account-form-wrapper
							h3 Account information
							p.account-text Fill out the information below so we can find the best campaigns possible for you. We recommend you be as detailed as possible so that you can have the most success.
								.sign-up-button-container-influencer
									.influencer-input
										.influencer-input-icon
											img(src='/static/img/instagram-grey.png')
										input(type='text',placeholder='Business instagram username', value="@getShowt")
								.sign-up-button-container-influencer
									.birthday-select-container
										strong Company type
										p.interest-explanation-text Select one of the items below that most pertains to your company
										.interests-container(data-bind="foreach: interests")
											.col-sm-6.interest-container(data-bind="click: $root.addInterestTypeToList.bind($data, $index())")
												.interest-wrapper(data-bind="style: {backgroundImage: interestImage}, click: $root.showInterestCheckLayer", style="height: 75px; background-position: center;-webkit-background-size: cover;-moz-background-size: cover;background-size: cover;	-o-background-size: cover; ")
													.interest-layer
													h3(data-bind="text: interestTitle")
													.interest-checked-layer
														img(src='/static/img/checked-box-white.png')
								.sign-up-button-container-influencer
									.birthday-select-container
										strong Tags
										p.interest-explanation-text Add any other words that you think would give us a better understanding of your business to help your experience with Shout Local better.
										.tags-container
											.tags-input-container
												.tags-input-wrapper
													.input-container.col-sm-10
														input(type="text",placeholder="Enter another interest of yours")
													.add-tag-button-container.col-sm-2(data-bind="click: addBusinessTag")
														p +
										.added-tags-container(data-bind="foreach: businessTagList")
											.added-tag-container
												.tag-title-container.col-sm-10
													p(data-bind="text: interestTitle")
												.tag-subtract-container.col-sm-2(data-bind="click: $root.deleteTagFromList.bind($data, $index())")
													p -
									p.error-message Please enter your instagram name and gender. We also highly recommend that you add some interests and tags so you can have the most success.
									.sign-up-button-influencer(data-bind="click: saveBusinessInformation") Save
	section#business-dashboard-home-section
		.business-dashboard-nav-container
			.business-dashboard-nav-wrapper
				.navigation-left-side-container.col-sm-6
					.navigation-left-side-wrapper
						.showt-out-icon-container
							img(src='/static/img/showt-logo.png')
				.navigation-right-side-container.col-sm-6
					.navigation-right-side-wrapper
						ul.right-link-container
							li
								p.business-dash-link.home-link(data-bind="click: sendHome") Home
							li
								p.business-dash-link.help-page-link(data-bind="click: sendToHelpPage") Help
							li
								p.business-dash-link.create-campaign-link(data-bind="click: showCreateCampaignContainer") Create
							li.business-right-container(data-bind="click: showBusinessDropDown")
								p Nutrishop
								.business-picture-container
									img(src='/static/img/showt-local-logo.png')
		.business-dropdown-container
			.business-dropdown-wrapper
				.business-action-item-container(data-bind="click: showEditBusinessInformationContainer")
					.action-item-icon-container
						img(src='/static/img/edit-orange.png')
					p Edit info
				.business-action-item-container(data-bind="click: signOutBusinessUser")
					.action-item-icon-container
						img(src='/static/img/user-orange.png')
					p Sign out
		.business-dashbaord-home-container
			.current-campaigns-container.campaigns-container
				.overall-campaigns-wrapper
					h3 Active campaigns
					.campaigns-wrapper(data-bind="foreach: currentCampaigns")
						.campaign-container.col-sm-4
							.campaign-wrapper
								.campaign-image-container
									img(src='/static/img/business-background.jpg')
								.row.business-campaign-info-row
									.influencer-count-container.col-sm-6(data-bind="click: $root.showInfluencerCountContainer")
										.influencer-count-icon-container
											img(src='/static/img/person.png')
										p 5
										span influencers
									.amount-spent-container.col-sm-6
										.amount-spent-wrapper(data-bind="click: $root.showAmountSpentContainer")
