block customCSS
	link(rel='stylesheet', href='/static/css/dashboard.css', type='text/css')

block content
	.create-account-navigation#create-account-navigation
		.navigation-passenger-icon
			img(src='/static/img/passenger-logo.png')
		.nav-middle-progress-icon-container
			.nav-progress-box
				.inner-progress-container
					img.progress-icon.enter-code-image(src='/static/img/enter-code.png', data-bind='click: progressIconClicked')
			.nav-progress-box
				.inner-progress-container
					img.progress-icon.agreement-image(src='/static/img/agreement.png', data-bind='click: progressIconClicked')
			.nav-progress-box
				.inner-progress-container
					img.progress-icon.enter-info-image(src='/static/img/enter-info.png', data-bind='click: progressIconClicked')
			.nav-progress-box
				.inner-progress-container
					img.progress-icon.rewards-image(src='/static/img/enter-rewards.png', data-bind='click: progressIconClicked')
