					.step-title-container
						h3 Select influencers
						p We believe the influencers below will give you the most success. Click hire me to add them to your campaign or click on them to get further information
						.seperator-div
					.influencers-found-container
						.influencer-found-wrapper(data-bind="foreach: sampleInfluencerList")
							.influencer-found.col-sm-3
								.influencer-found-inner-container(data-bind="click: $root.addInfluencerToOrderList")
									.influencer-image-container
										img.influencer-found-image(data-bind="attr: {src: image}")
									.influencer-information-container
										p.influencer-found-name(data-bind="text: name")
										.influencer-found-location-container
											img.influencer-found-location-image(src='/static/img/location.png')
											p.influencer-found-location(data-bind="text: location")
									.showt-rating-container.col-sm-6
										.platform-followers-container
											img.instagram-orange(src='/static/img/instagram-orange.png')
											p.influencer-found-rating(data-bind="text: instagramFollowersText")
										p.influencer-rating-text Followers
									.showt-rating-container.col-sm-6
										.platform-followers-container
											p.influencer-found-rating.showt-score-text(data-bind="text: showtScore")
										p.influencer-rating-text Showt score
									p.influencer-price(data-bind="text: showtPriceText")
									p.influencer-rating-text Per post
								.hire-me-button(data-bind="click: $root.showInfluencerInformation") More info
					.bottom-action-buttons
