						.next-button(data-bind="click: nextButtonClicked") CONTINUE
		.create-campaign-information-container
			.create-step-wrapper
				.step-title-container
					h3 Review information
					p Review the information that you have submitted. On the left is what influencers are going to see and on the right is what only you yourself can see.
					.seperator-div
				.sides-container
					.row
						.left-side-creation-container.col-sm-6
							.creation-side-wrapper
							.review-posting-container
								.create-input-wrapper
									h4.section-header CAMPAIGN NAME
									p.review-p This is goign to be the campaign name
								.create-input-wrapper.create-input-wrapper-bottom
									h4.section-header CAMPAIGN BUDGET
									p.review-p $100
								.create-insput-wrapper.create-input-wrapper-bottom
									h4.section-header PLATFORMS
									.platform-image-container
										img(src='/static/img/instagram-grey.png')
								.create-input-wrapper.create-input-wrapper-bottom
									h4.section-header TAGS
									p.review-p Skateboarding
									p.review-p Urban Living
								.create-input-wrapper.create-input-wrapper-bottom
									h4.section-header POSTING TYPE
									p.review-p In-store posting
						.right-side-creation-container.col-sm-6
							.creation-side-wrapper.right-wrapper
								.create-input-wrapper
									h4.section-header INFLUENCER INFORMATION
