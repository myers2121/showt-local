							.added-influencer-image-container.col-sm-4
								img(data-bind="attr: {src: image}")
							.added-influencer-info.col-sm-8
								p.added-influencer-name(data-bind="text: name")
								p.added-influencer-instagram(data-bind="text: instagram")
								p.added-influencer-price(data-bind="text: showtPriceText")
