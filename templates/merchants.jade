extends ./merchantLayout.jade

block content
	header#merchantsHome
		.header-content
			.header-content-inner
				h3.passenger-header.merchants-header Offer discounts today
				p.home-text Offer rewards. Drive customer traffic. Grow your business. Get started now!
	section#get-started-section
		.container
			.row
				.col-lg-12.text-center
					.get-started-button Get Started
					p.contact-sales Contact sales
	section#start-up-section
		.container
			.row
				.col-lg-12.text-center
					h2.section-heading.merchant-first-heading Start, build, and grow with Passenger
					p.section-p.start-p Passenger is a premier solution to take your companies advertising campaign directly to potential customers to drive your growth.
				.start-sections-outside-container(data-bind="foreach: startSections")
					.start-section(data-bind="css: styleColumn")
						.start-section-inner
							.img-container(data-bind="css: myClass")
							.containing-shit
								h3.start-section-title(data-bind="text: title")
								p.start-section-text(data-bind="text: text")
	section#continue-section
		.container
			.row
				.col-lg-12.text-center
					h2.section-heading.merchant-first-heading We want to grow your business
					p.section-p.start-p Besides attacking the problem of distracted driving, our main focus is to help businesses grow. We understand that without our amazing partners we would not be able to tackle the problem of texting and driving. This is why we put such an emphasis on helping our partners grow here at Passenger.
			.more-merchant-stuff-container
				.more-merchant-info.col-sm-6
					.more-merchant-info-inner
						img.more-merchant-icon(src='/static/img/help-merchants.png')
						h3.merchant-more-info-title Here to help you succeed
						p.merchant-more-info-text We want to make your experience with Passenger is as amazing as possible.
						p.contact-support-more-info-button Contact sales
				.more-merchant-info.col-sm-6
					.more-merchant-info-inner
						img.more-merchant-icon(src='/static/img/quick.png')
						h3.merchant-more-info-title Clear pricing, fast implementation
						p.merchant-more-info-text Free to set up, pricing is clearly written out, and implementation is seamless.
			.get-started-button Get Started
			p.contact-sales Contact sales
		svg.slant(viewbox='0 0 1 1', preserveaspectratio='none')
			polygon(points='0,1 1,1 1,0')
	section#footer
		.container
			.row
				.col-lg-12.text-center
					h2.section-heading.footer-heading Passenger
					h3.passenger-hash #passengerapp
				.social-icons-container(data-bind="foreach: socialMedias")
					.icon-container
						img(data-bind="attr: { src: src }, click: $parent.socialMediaClick")
				.app-store-buttons
					.col-sm-6.store-button-container
						.app-store-button-container
							img(src='/static/img/app-store-button.png')
					.col-sm-6.store-button-container
						.app-store-button-container
							img(src='/static/img/google-play-badge.png')
				p.coming-soon-text Coming soon
				.back-to-top-container.btn.btn-sm.page-scroll
					p Back to top
					img(src='/static/img/nav-right.png')
				h3.passenger-hash.copy-right-footer &copy
					span(data-bind="text: currentDate")
					| Spacebar Technologies, Inc.
