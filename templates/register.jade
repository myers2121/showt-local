extends ./registerLayout.jade

block content
        section#register
          .back-button-container
            img.back-button(src='/static/img/back-button.png')
          .container.register-first-container
            h3.register-title PAY
            .form-container
              form#contact-form.simple_form.new_quote_request(enctype='multipart/form-data', accept-charset='UTF-8',  novalidate='novalidate')
                input(name='utf8', type='hidden', value='✓')
                input(type='hidden', name='authenticity_token', value='A6vVgqnTtNvuksEFI0drl1m8a2HBDucqyzv47+Io/+G+xwBBjEAVKu6lQZBVnjh02Znr9p2KBNqxhBdTE10tqw==')
                .__input-item.col-sm-12.input-item.string.required.quote_request_full_name.input-item--first(aria-required='true')
                  .input-wrapper
                    label.form-label.string.required.control-label.__label(for='quote_request_full_name', aria-required='true')
                      abbr(title='required')
                      |  Enter confirmation number
                    input#hire-name-input.string.required.__input(required='required', aria-required='true', type='text', name='hire-me-full-name', data-bind="textInput: confirmationNumber")
                    p.error.name-error(data-bind="visible: nameCheck") Please enter in a valid name.
                button.btn.__submit.js-submit.register-information-button(data-bind="click: confirmationCodeSubmission")
                  | SUBMIT
        .register-payment-section
          .register-payment-container
            p.fa.fa-times.exit-person-expanded.exit-person-expanded-hunt.exit-popup.exit-checkout
            h3.checkout-title CHECKOUT
            .checkout-info-container
              .current-purchase-container.col-sm-3
                .inside-info-container
                  img.animal-image(data-bind="attr: {src: animalImage}")
                  h3.purchase-animal-type(data-bind="text: animalType")
                  h3.purchase-animal-date(data-bind="text: animalDate")
                  h3.purchase-animal-city(data-bind="text: animalCity")
                  h3.purchase-animal-state(data-bind="text: animalState")
                  h3.purchase-animal-price(data-bind="text: animalPrice")
              .card-information-container.col-sm-9
                .inside-info-container
                  h3 Payment
                  form#contact-form.simple_form.new_quote_request(action="/paynow", method="post", role="form")
                    input(name='utf8', type='hidden', value='✓')
                    input(type='hidden', name='method', value='credit_card')
                    input(type='hidden', name='amount', data-bind="value: animalPrice")
                    input(type='hidden', name='currency', value='usd')
                    input(type='hidden', name='first_name', data-bind="value: registeredUsersFirstName")
                    input(type='hidden', name='last_name', data-bind="value: registeredUsersLastName")
                    input(type='hidden', name='authenticity_token', value='A6vVgqnTtNvuksEFI0drl1m8a2HBDucqyzv47+Io/+G+xwBBjEAVKu6lQZBVnjh02Znr9p2KBNqxhBdTE10tqw==')
                    .__input-item.col-sm-6.input-item.email.required.quote_request_email.__input-item--half(aria-required='true')
                      .input-wrapper
                        label.form-label.email.required.control-label.__label(for='quote_request_email', aria-required='true')
                          abbr(title='required')
                          |  Card Number *
                        input#hire-email-input.string.email.required.__input(type='text', name='number', placeholder='Enter card #')
                        p.error.email-error(data-bind="visible: emailCheck") Please enter a valid credit card number
                    .__input-item.col-sm-6.input-item.tel.required.quote_request_phone.__input-item--half(aria-required='true')
                      .input-wrapper
                        label.form-label.tel.required.control-label.__label(for='quote_request_phone', aria-required='true')
                          abbr(title='required')
                          |  Expiration Month *
                        input#hire-phone-input.string.tel.required.__input(type='text', name='expire_month', placeholder='02')
                        p.error.phone-number-error(data-bind="visible: phoneCheck") Please enter a valid month with both digits
                    .__input-item.col-sm-6.input-item.tel.required.quote_request_phone.__input-item--half(aria-required='true')
                      .input-wrapper
                        label.form-label.tel.required.control-label.__label(for='quote_request_phone', aria-required='true')
                          abbr(title='required')
                          |  Expiration Year *
                        input#hire-phone-input.string.tel.required.__input(type='text', name='expire_year', placeholder='2017')
                        p.error.phone-number-error(data-bind="visible: phoneCheck") Please enter a valid expiration year with just the last 2 digits
                    .__input-item.last-input-item.col-sm-6.input-item.tel.required.quote_request_phone.__input-item--half(aria-required='true')
                      .input-wrapper
                        label.form-label.tel.required.control-label.__label(for='quote_request_phone', aria-required='true')
                          abbr(title='required')
                          |  CVV *
                        input#hire-phone-input.string.tel.required.__input(type='password', name='cvv2', placeholder='Security code')
                        p.error.phone-number-error(data-bind="visible: phoneCheck") Please enter in a valid phone number starting with an area code.
                    .__input-item.last-input-item.col-sm-6.input-item.tel.required.quote_request_phone.__input-item--half.card-type-container(aria-required='true')
                      .input-wrapper
                        label.form-label.tel.required.control-label.__label(for='quote_request_phone', aria-required='true')
                          abbr(title='required')
                          |  Card type *
                        input#hire-phone-input.string.tel.required.__input(type='text', name='type', placeholder='Visa, Mastercard, American Express, and Discover')
                        p.error.phone-number-error(data-bind="visible: phoneCheck") Please enter in a valid phone number starting with an area code.
                    button.btn.purchase-hunt-button(type="submit")
                      | PURCHASE
          .register-confirmation-container
            .confirmation-container
              h3 Congratulations
              p This is going to be the paragraph that lets you know all of the information that is necessary when the user purchases a hunt.
              button.btn.__submit.js-submit.register-information-button(data-bind="click: finishRegistrationProcess")
                | SWEET
        section#footer.register-footer
          .container
            .row.register-container
              h1.footer-register-button.bg-outfitters-button B&G OUTFITTERS
            .row.bottom-footer-row
              .col-sm-3.social-links-container
                .social-links
                  .col-sm-4.link-container
                    p.fa.fa-facebook-official.facebook
                  .col-sm-4.link-container
                    p.fa.fa-instagram.instagram
                  .col-sm-4.link-container
                    p.fa.fa-twitter.twitter
              .col-sm-3.copyright-container
                p &copy; 2016 B&G Outfitters Inc.
